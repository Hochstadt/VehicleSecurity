<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="seniordesign.vehiclesecurity">

    <!-- Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Save into local storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Select_Stream"
            android:label="@string/title_activity_select__stream"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DebugCommands"
            android:label="@string/title_activity_debug_commands"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".configActivity" />
        <activity
            android:name=".ViewDirectories"
            android:label="@string/title_activity_view_directories"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DirectoryList"
            android:label="@string/title_activity_directory_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>