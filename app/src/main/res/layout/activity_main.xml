<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seniordesign.vehiclesecurity.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/debug_commands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="debug_commands"
            android:text="Debug Commands"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/View_Past_Footage"
            android:layout_marginLeft="129dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/dashcam_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/alert_mode"
            android:layout_centerHorizontal="true"
            android:onClick="dashcam_mode"
            android:text="Dashcam Mode"
            android:layout_marginLeft="138dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="109dp" />

        <Button
            android:id="@+id/view_video_streams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/debug_commands"
            android:layout_centerHorizontal="true"
            android:onClick="view_video_streams"
            android:text="View Video Streams"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/alert_mode"
            android:layout_marginLeft="121dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/View_Past_Footage"
            android:onClick="view_past_footage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_video_streams"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="52dp"
            android:text="View Past Footage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_video_streams" />

        <Button
            android:id="@+id/alert_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_video_streams"
            android:layout_centerHorizontal="true"
            android:onClick="alert_mode"
            android:text="Alert Mode"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/dashcam_mode"
            android:layout_marginLeft="151dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
