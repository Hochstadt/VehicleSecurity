<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474747"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="seniordesign.vehiclesecurity.Select_Stream"
    tools:showIn="@layout/activity_select__stream">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="9dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="25dp"
            android:fontFamily="monospace"
            android:text="Vehicle Security"
            android:textColor="#0EB031"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="View Video Stream"
            android:textColor="#0EB031"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/frontButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp"
            android:onClick="onFront"
            android:text="Front" />

        <Button
            android:id="@+id/rearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/frontButton"
            android:layout_alignStart="@+id/frontButton"
            android:layout_centerVertical="true"
            android:onClick="onRear"
            android:text="Rear" />

        <Button
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frontButton"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/frontButton"
            android:layout_toStartOf="@+id/frontButton"
            android:onClick="onLeft"
            android:text="Left" />

        <Button
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/leftButton"
            android:layout_toEndOf="@+id/frontButton"
            android:layout_toRightOf="@+id/frontButton"
            android:onClick="onRight"
            android:text="Right" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
